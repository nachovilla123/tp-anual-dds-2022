    <section class="form-section container">

        <form  method="POST" action = "/registerorg/createorg/created" style="text-align: center ;" > <!-- agregar action y metodo HTTP ej POST-->



            <div  style="text-align: center ;" class="form-group mt-3" style="width: 500px ">
              <input placeholder="Ingrese Razón Social" type="text" id="name" name="razonSocial" required
              maxlength="25" size="25" style="width: 500px ">
            </div>

            <div  style="text-align: center ;" class="form-group mt-3" style="width: 500px ">
                <input placeholder="Ingrese ubicación de la organización" type="text" id="name" name="ubicacionOrg" required
                maxlength="25" size="25" style="width: 500px ">
              </div>
            <div  style="text-align: center ;" class="form-group mt-3" style="width: 500px ">
                <input placeholder="Ingrese la altura " type="text" id="name" name="alturaOrg" required
                maxlength="25" size="25" style="width: 500px ">
              </div>

            <div  style="text-align: center ;" class="form-group mt-3" style="width: 500px ">
                <input placeholder="Ingrese la localidad " type="text" id="name" name="localidadOrg" required
                maxlength="25" size="25" style="width: 500px ">
              </div>


            <div  style="text-align: center ;text-align: center ;" class="form-group mt-3" style="width: 500px ">
                <!-- este me salio con porcentaje desp reemplazar en todos el width %45-->
                <select style="width: 45%;" id="name" name="tipoOrg">
                    <option value="" disabled selected>Seleccione tipo organización...</option>
                <option value="0">Gubernamental</option>
                <option value="1">ONG</option>
                <option value="2">Empresa</option>


                </select>
            </div>

            <div  style="text-align: center ;" class="form-group mt-3" style="width: 500px ">

                <select style="width:45%;"  id="name" name="clasificacionOrg">
                    <option value="" disabled selected>Seleccione clasificación de la  organización...</option>
                    <option value="0">Ministerio</option>
                    <option value="1">Universidad</option>
                    <option value="2">Escuela</option>
                    <option value="3">Empresa del Sector primario</option>
                    <option value="4">Empresa del Sector secuandario</option>

                </select>
            </div>

            <div  style="text-align: center ;" class="form-group mt-3" style="width: 500px ">
                <input placeholder="Ingrese usuario para iniciar sesion" type="text" id="name" name="user" required
                       maxlength="25" size="25" style="width: 500px ">
            </div>
            <div  style="text-align: center ;" class="form-group mt-3" style="width: 500px ">
                <input placeholder="Ingrese contraseña" type="password" id="name" name="contrasenia" required
                       maxlength="25" size="25" style="width: 500px ">
            </div>

            <div style="margin-top: 15px;">
                <button  style="width: 500px " type="submit" class="btn btn-success" >Registrar Organización</button>
            </div>


